{
  "name": "hyenimc",
  "version": "0.2.3",
  "description": "혜니월드 전용 마인크래프트 런처 (강혜니 이미지 저작권 보호)",
  "main": "main/main.js",
  "author": "deVbug",
  "license": "SEE LICENSE IN LICENSE.md",
  "private": true,
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron ./dist/main/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run backend:build:mac-arm64 && npm run backend:build:mac-x64 && npm run backend:build:mac-universal && npm run build && electron-builder --mac --arm64 --x64 --universal",
    "package:win": "npm run backend:build:win-x64 && npm run build && electron-builder --win",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "proto:gen": "cd proto && buf generate",
    "backend:build:mac-arm64": "cd backend && GOOS=darwin GOARCH=arm64 go build -o bin/hyenimc-backend-arm64 ./cmd/hyenimc",
    "backend:build:mac-x64": "cd backend && GOOS=darwin GOARCH=amd64 go build -o bin/hyenimc-backend-x64 ./cmd/hyenimc",
    "backend:build:mac-universal": "npm run backend:build:mac-arm64 && npm run backend:build:mac-x64 && lipo -create -output backend/bin/hyenimc-backend-universal backend/bin/hyenimc-backend-arm64 backend/bin/hyenimc-backend-x64",
    "backend:build:win-x64": "cd backend && go build -o bin/hyenimc-backend.exe ./cmd/hyenimc",
    "backend:build:all": "npm run backend:build:mac-universal && npm run backend:build:win-x64"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.9.0",
    "@grpc/grpc-js": "^1.14.0",
    "@hookform/resolvers": "^3.3.3",
    "adm-zip": "^0.5.16",
    "axios": "^1.6.0",
    "chokidar": "^4.0.3",
    "clsx": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.294.0",
    "minecraft-launcher-core": "^3.18.1",
    "node-stream-zip": "^1.15.0",
    "prismarine-nbt": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "react-router-dom": "^7.9.4",
    "semver": "^7.5.4",
    "tailwind-merge": "^2.1.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.58.0",
    "@types/adm-zip": "^0.5.7",
    "@types/chokidar": "^1.7.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/semver": "^7.5.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "terser": "^5.36.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "build": {
    "appId": "me.devbug.hyeniworld.hyenimc",
    "productName": "HyeniMC",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "hyeniworld",
      "repo": "HyeniMC"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "compression": "maximum",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "removePackageScripts": true,
    "files": [
      {
        "from": "dist/main",
        "to": "main",
        "filter": [
          "**/*",
          "!**/*.map",
          "!**/*.d.ts"
        ]
      },
      {
        "from": "dist/preload",
        "to": "preload",
        "filter": [
          "**/*",
          "!**/*.map",
          "!**/*.d.ts"
        ]
      },
      {
        "from": "dist/renderer",
        "to": "renderer",
        "filter": [
          "**/*",
          "!**/*.map"
        ]
      },
      {
        "from": "dist/shared",
        "to": "shared",
        "filter": [
          "**/*",
          "!**/*.map",
          "!**/*.d.ts"
        ]
      },
      "package.json",
      "!node_modules/**/*.md",
      "!node_modules/**/*.txt",
      "!node_modules/**/.DS_Store",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/README*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/*.flow",
      "!node_modules/**/*.ts",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/__tests__/**",
      "!node_modules/**/example/**",
      "!node_modules/**/examples/**",
      "!node_modules/**/docs/**",
      "!node_modules/**/.bin/**",
      "!node_modules/**/.github/**"
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "build/icon.icns",
      "x64ArchFiles": "*",
      "extraResources": [
        {
          "from": "backend/bin/hyenimc-backend-${arch}",
          "to": "backend/hyenimc-backend"
        }
      ],
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "dmg",
          "arch": "x64"
        },
        {
          "target": "dmg",
          "arch": "universal"
        }
      ],
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "hyenimc"
            ],
            "CFBundleURLName": "HyeniMC Protocol Handler",
            "CFBundleTypeRole": "Viewer"
          }
        ]
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "extraResources": [
        {
          "from": "backend/bin/hyenimc-backend.exe",
          "to": "backend/hyenimc-backend.exe"
        }
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "differentialPackage": true
    },
    "directories": {
      "output": "release",
      "buildResources": "build"
    }
  }
}
